<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
>


    <ImageView
            android:id="@+id/ProfilePicIV"
            android:background="#aaaaaa"
            android:layout_width="378dp"
            android:layout_height="463dp"
            android:layout_marginTop="11dp" android:layout_below="@+id/linearLayoutButton"
            android:layout_above="@+id/linearLayoutInformation" android:layout_marginBottom="23dp"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_marginRight="10dp" android:layout_marginEnd="13dp" android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp" android:layout_marginStart="10dp" android:layout_alignParentLeft="true"/>

    <Button
            android:id="@+id/ClassifyBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="19dp"
            android:layout_alignParentBottom="true"
            android:text="Classify Image" android:layout_alignParentStart="true" android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" android:layout_alignParentLeft="true" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"  android:layout_marginEnd="10dp"/>

    <LinearLayout
            android:id="@+id/linearLayoutButton"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp" android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="15dp" android:layout_marginEnd="15dp"
            android:layout_alignParentStart="true" android:layout_marginLeft="10dp" android:layout_marginStart="10dp"
            android:layout_alignParentLeft="true">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:id="@+id/LoadConfigsBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Load a Config file" android:layout_weight="1"
                    />
        </LinearLayout>
        <Button
                android:id="@+id/SelectImageBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Image"
        />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/linearLayoutInformation"
            android:orientation="horizontal"
            android:layout_width="382dp"
            android:layout_height="110dp"
            android:background="#FFFF99"
            android:layout_above="@+id/ClassifyBtn"
            android:layout_marginBottom="12dp"
            android:layout_alignParentStart="true" android:layout_marginLeft="10dp" android:layout_marginStart="10dp"
            android:layout_alignParentLeft="true" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="10dp" android:layout_marginEnd="10dp"
    >

        <TextView
                android:text="Check Information"
                android:layout_width="match_parent" android:layout_marginRight="12dp" android:layout_marginLeft="12dp"
                android:layout_height="match_parent" android:layout_marginTop="12dp" android:layout_marginBottom="12dp"
                android:id="@+id/textViewInformation"/>

    </LinearLayout>

</RelativeLayout>